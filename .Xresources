!
! ~/.Xresources
!

! X Settings
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
Xcursor.theme: Neutral

! Colour Scheme
#include "/home/zach/.config/termcolours/hybrid"

! URxvt Options
URxvt.depth: 32
URxvt.scrollstyle: rxvt
URxvt.scrollBar: off
URxvt.urgentOnBell: True
URxvt.visualBell: True
URxvt.cursorColor: #00FF00
! bold, italic, underline
URxvt.colorBD: #B5BD68
URxvt.colorIT: #B294BB
URxvt.colorUL: #81A2BE
! font
URxvt.font: xft:Inconsolata\ for\ Powerline:size=18, xft:DejaVu\ Sans\ Mono:size=10.5
URxvt.boldFont:  xft:Inconsolata\ for\ Powerline:size=18, xft:DejaVu\ Sans\ Mono:size=10.5
URxvt.italicFont: xft:Inconsolata\ for\ Powerline:size=18, xft:DejaVu\ Sans\ Mono:size=10.5
URxvt.boldItalicFont: xft:Inconsolata\ for\ Powerline:size=18, xft:DejaVu\ Sans\ Mono:size=10.5
URxvt.letterSpace: -1
! extensions
URxvt.perl-ext-common: default,clipboard,keyboard-select,url-select
! clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob
! keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.autocopy: true
URxvt.url-select.button: 1
URxvt.url-select.launcher: /usr/bin/google-chrome-stable
URxvt.url-select.underline: true
