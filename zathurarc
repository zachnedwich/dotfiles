# mupdf backend
set selection-clipboard clipboard
set font "Inconsolata normal 18"
map [normal] <C-f> toggle_fullscreen
map [fullscreen] <C-f> toggle_fullscreen
set show-scrollbars true
set pages-per-row 1
set scroll-page-aware true
set scroll-wrap true
set scroll-full-overlap 0.1
set zoom-min 5
set zoom-max 1000
set zoom-step 5

# base16-ish theme from https://github.com/atelierbram/syntax-highlighting/blob/master/atelier-schemes/output/zathura/base16-atelierplateau.zathurarc-light
set default-bg                  "#1D1F21"
set default-fg                  "#C5C8C6"

set statusbar-fg                "#585050"
set statusbar-bg                "#7e7777"

set inputbar-bg                 "#1b1818"
set inputbar-fg                 "#585050"

set notification-error-bg       "#ca4949"
set notification-error-fg       "#e7dfdf"

set notification-warning-bg     "#ca4949"
set notification-warning-fg     "#e7dfdf"

set highlight-color             "#a06e3b"
set highlight-active-color      "#ca4949"

set completion-highlight-fg     "#8a8585"
set completion-highlight-bg     "#5485b6"

set completion-bg               "#8a8585"
set completion-fg               "#5485b6"

set notification-bg             "#4b8b8b"
set notification-fg             "#f4ecec"

set recolor-lightcolor          "#e7dfdf"
set recolor-darkcolor           "#585050"
set recolor                     "true"

# setting recolor-keephue true will keep any color your pdf
# has.  If it is set to false, it will just be shades of
# gray.  (lol 50 shades of gray)
set recolor-keephue             "true"
